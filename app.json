{
  "expo": {
    "name": "TravelBuddy",
    "slug": "travelbuddy-ride-sharing",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "travelbuddy",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.travelbuddy.ridesharing"
    },
    "android": {
      "package": "com.travelbuddy.ridesharing",
      "adaptiveIcon": {
        "backgroundColor": "#2563EB"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router", 
      "expo-font", 
      "expo-web-browser",
      [
        "expo-notifications",
        {
          "icon": "./assets/images/notification-icon.png",
          "color": "#2563EB",
          "sounds": ["./assets/sounds/notification.wav"]
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow TravelBuddy to use your location to find nearby rides and provide accurate pickup locations."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}